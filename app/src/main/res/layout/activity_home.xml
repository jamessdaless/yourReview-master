<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="uk.ac.tees.p4072709.yourreview.Home">

    <Button
        android:text="My Account"
        android:layout_width="100dp"
        android:id="@+id/btnHMyAccount"
        android:layout_height="100dp"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:layout_alignBottom="@+id/btnHSocialMedia"
        android:layout_alignLeft="@+id/btnHLocation"
        android:layout_alignStart="@+id/btnHLocation" />

    <Button
        android:text="Location"
        android:layout_width="100dp"
        android:id="@+id/btnHLocation"
        android:layout_height="100dp"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/btnHMyAccount"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="My Reviews"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/btnHMyReviews"
        android:layout_alignBottom="@+id/btnHLocation"
        android:layout_toRightOf="@+id/btnHMyAccount"
        android:layout_toEndOf="@+id/btnHMyAccount"
        android:layout_alignTop="@+id/btnHLocation" />

    <Button
        android:text="Social Media"
        android:layout_marginTop="38dp"
        android:id="@+id/btnHSocialMedia"
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/btnHMyAccount"
        android:layout_toEndOf="@+id/btnHMyAccount"
        android:layout_marginLeft="39dp"
        android:layout_marginStart="39dp" />

    <Button
        android:text="Global Reviews"
        android:layout_width="100dp"
        android:id="@+id/btnHGlobalReviews"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/btnHMyReviews"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btnHMyReviews" />

    <Button
        android:text="My Artists"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/btnHMyArtist"
        android:layout_alignBottom="@+id/btnHSearch"
        android:layout_alignLeft="@+id/btnHSocialMedia"
        android:layout_alignStart="@+id/btnHSocialMedia"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp"
        android:layout_alignTop="@+id/btnHSearch" />

    <Button
        android:text="Search"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/btnHSearch"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/btnHLocation"
        android:layout_alignLeft="@+id/btnHMyAccount"
        android:layout_alignStart="@+id/btnHMyAccount"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp" />

</RelativeLayout>
