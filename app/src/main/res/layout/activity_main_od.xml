<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main_od"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="uk.ac.tees.p4072709.yourreview.MainActivityOD">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <Button
            android:text="Change Password?"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnChangePass"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/MACurrEmail"
            android:layout_alignEnd="@+id/MACurrEmail" />





        <EditText
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/MANewPass"
        android:hint="New Password"
        android:layout_alignTop="@+id/MANEmail"
        android:layout_alignLeft="@+id/MACPass"
        android:layout_alignStart="@+id/MACPass"
        android:layout_marginTop="13dp" />

    <EditText
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/MAConNewPass"
        android:hint="Please enter new password again"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/MANewPass"
        android:layout_alignLeft="@+id/MANewPass"
        android:layout_alignStart="@+id/MANewPass" />



    <Button
        android:text="Confirm Password Change?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnConPass"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/btnConEmail"
        android:layout_alignStart="@+id/btnConEmail" />




        <Button
            android:text="Sign Out?"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/btnMADelAccount"
            android:layout_alignLeft="@+id/btnChangePass"
            android:layout_alignStart="@+id/btnChangePass"
            android:id="@+id/btnMASignOut"
            android:layout_width="150dp"
            />

        <Button
            android:text="Continue"
            android:layout_height="wrap_content"
            android:id = "@+id/btnMAConToHome"
            android:layout_width="150dp"
            />


        <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btnConPass"
            android:layout_marginBottom="27dp"
            android:id="@+id/progressBar4"
            android:visibility="invisible"
            android:layout_toRightOf="@+id/btnMADelAccount"
            android:layout_toEndOf="@+id/btnMADelAccount" />
</LinearLayout>
</android.support.design.widget.CoordinatorLayout>
